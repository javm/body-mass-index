extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.username}. Check your BMI and category
						div.signup-wall
							form(class='form-signin', action='/bmi', method='POST')
								input(type='text',name='height', class='form-control', placeholder='Height in m',required, autofocus)
								input(type='text',name='weight', class='form-control nomargin',placeholder='Weight in Kg', required)
								button(class='btn btn-lg btn-primary btn-block', type='submit') Calculate
								span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}

						a(href='/signout', class='text-center new-account') Sign Out
